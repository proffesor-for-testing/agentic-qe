{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "../../../dist/edge",
    "rootDir": "../../..",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "../../..",
    "paths": {
      "@edge/*": ["src/edge/*"],
      "@ruvector/edge": ["node_modules/@ruvector/edge"]
    },
    "types": ["node", "chrome"]
  },
  "include": [
    "../**/*.ts",
    "../../core/memory/IPatternStore.ts"
  ],
  "exclude": [
    "../**/*.test.ts",
    "../**/*.spec.ts",
    "**/node_modules"
  ],
  "compileOnSave": true
}
