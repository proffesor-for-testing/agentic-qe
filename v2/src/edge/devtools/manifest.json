{
  "manifest_version": 3,
  "name": "Agentic QE DevTools",
  "version": "1.0.0",
  "description": "Browser DevTools panel for monitoring Agentic QE agents running in the browser",
  "devtools_page": "devtools.html",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js", "panel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
