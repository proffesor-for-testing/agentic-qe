{
  "name": "n8n-unit-tests",
  "version": "1.0.0",
  "description": "Unit tests for n8n workflow code nodes - Agentic Marketing Performance v02",
  "scripts": {
    "test": "jest --coverage",
    "test:verbose": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --coverageReporters=text --coverageReporters=json-summary"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
