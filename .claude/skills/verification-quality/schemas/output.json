{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentic-qe.dev/schemas/verification-quality-output.json",
  "title": "Verification Quality Skill Output Schema",
  "description": "Schema for verification quality output with quality score, verification coverage, and requirement traceability.",
  "type": "object",
  "required": ["skillName", "version", "timestamp", "status", "trustTier", "output"],
  "properties": {
    "skillName": {
      "type": "string",
      "const": "verification-quality",
      "description": "Must be 'verification-quality'"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["success", "partial", "failed", "skipped"]
    },
    "trustTier": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "output": {
      "type": "object",
      "required": ["summary", "qualityScore", "verificationCoverage"],
      "properties": {
        "summary": {
          "type": "string",
          "minLength": 50,
          "maxLength": 2000
        },
        "qualityScore": {
          "$ref": "#/$defs/qualityScore"
        },
        "verificationCoverage": {
          "$ref": "#/$defs/verificationCoverage"
        },
        "requirementTraceability": {
          "$ref": "#/$defs/requirementTraceability"
        },
        "verificationMethods": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/verificationMethod"
          }
        },
        "findings": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/finding"
          },
          "maxItems": 100
        },
        "recommendations": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/recommendation"
          },
          "maxItems": 50
        },
        "metrics": {
          "$ref": "#/$defs/metrics"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/artifact"
          }
        }
      }
    },
    "metadata": {
      "$ref": "#/$defs/metadata"
    },
    "validation": {
      "$ref": "#/$defs/validationResult"
    },
    "learning": {
      "$ref": "#/$defs/learningData"
    }
  },
  "$defs": {
    "qualityScore": {
      "type": "object",
      "required": ["value", "max"],
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Overall verification quality score"
        },
        "max": {
          "type": "number",
          "const": 100
        },
        "grade": {
          "type": "string",
          "pattern": "^[A-F][+-]?$"
        },
        "trend": {
          "type": "string",
          "enum": ["improving", "stable", "declining", "unknown"]
        },
        "breakdown": {
          "type": "object",
          "properties": {
            "completeness": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "correctness": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "consistency": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "traceability": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        }
      }
    },
    "verificationCoverage": {
      "type": "object",
      "required": ["totalRequirements", "verifiedRequirements", "coveragePercentage"],
      "properties": {
        "totalRequirements": {
          "type": "integer",
          "minimum": 0
        },
        "verifiedRequirements": {
          "type": "integer",
          "minimum": 0
        },
        "coveragePercentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "partiallyVerified": {
          "type": "integer",
          "minimum": 0
        },
        "notVerified": {
          "type": "integer",
          "minimum": 0
        },
        "byPriority": {
          "type": "object",
          "properties": {
            "critical": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "high": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "medium": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "low": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "byComponent": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          }
        }
      }
    },
    "requirementTraceability": {
      "type": "object",
      "properties": {
        "traceabilityScore": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "forwardLinks": {
          "type": "integer",
          "minimum": 0,
          "description": "Requirements linked to tests"
        },
        "backwardLinks": {
          "type": "integer",
          "minimum": 0,
          "description": "Tests linked to requirements"
        },
        "orphanTests": {
          "type": "integer",
          "minimum": 0,
          "description": "Tests without requirement links"
        },
        "unlinkedRequirements": {
          "type": "integer",
          "minimum": 0,
          "description": "Requirements without test links"
        },
        "matrix": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "requirementId": {
                "type": "string"
              },
              "testIds": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "status": {
                "type": "string",
                "enum": ["verified", "partial", "not-verified", "blocked"]
              }
            }
          }
        }
      }
    },
    "verificationMethod": {
      "type": "object",
      "required": ["name", "coverage"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["inspection", "analysis", "demonstration", "test", "review"]
        },
        "coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "requirementsCount": {
          "type": "integer",
          "minimum": 0
        },
        "effectiveness": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "finding": {
      "type": "object",
      "required": ["id", "title", "severity", "category"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^VER-\\d{3,6}$"
        },
        "title": {
          "type": "string",
          "minLength": 10,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "maxLength": 2000
        },
        "severity": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low", "info"]
        },
        "category": {
          "type": "string",
          "enum": ["coverage", "traceability", "completeness", "consistency", "correctness"]
        },
        "affectedRequirements": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "remediation": {
          "type": "string"
        }
      }
    },
    "recommendation": {
      "type": "object",
      "required": ["id", "title", "priority"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^REC-\\d{3,6}$"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"]
        },
        "effort": {
          "type": "string",
          "enum": ["trivial", "low", "medium", "high", "major"]
        },
        "impact": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "totalChecks": {
          "type": "integer",
          "minimum": 0
        },
        "passed": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "minimum": 0
        },
        "duration": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "artifact": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["report", "matrix", "data", "log"]
        },
        "path": {
          "type": "string"
        },
        "format": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "executionTimeMs": {
          "type": "integer",
          "minimum": 0
        },
        "toolsUsed": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "agentId": {
          "type": "string"
        }
      }
    },
    "validationResult": {
      "type": "object",
      "properties": {
        "schemaValid": {
          "type": "boolean"
        },
        "contentValid": {
          "type": "boolean"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "learningData": {
      "type": "object",
      "properties": {
        "patternsDetected": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "reward": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  }
}
