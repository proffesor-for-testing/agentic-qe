{
  "mcpServers": {
    "agentic-qe": {
      "command": "aqe-mcp",
      "args": [],
      "env": {
        "AQE_PROJECT_ROOT": "/workspaces/agentic-qe-new",
        "AQE_LEARNING_ENABLED": "true",
        "AQE_WORKERS_ENABLED": "true",
        "AQE_CLOUD_SYNC_ENABLED": "true",
        "NODE_ENV": "production"
      }
    },
    "vibium": {
      "command": "npx",
      "args": [
        "-y",
        "vibium"
      ],
      "env": {
        "NODE_NO_WARNINGS": "1",
        "VIBIUM_HEADLESS": "true",
        "CHROMEDRIVER_PATH": "/usr/bin/chromedriver",
        "CHROME_PATH": "/usr/bin/chromium"
      }
    }
  }
}
