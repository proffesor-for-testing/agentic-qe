{
  "mcpServers": {
    "agentic-qe-v3": {
      "command": "node",
      "args": [
        "./v3/dist/mcp/bundle.js"
      ],
      "env": {
        "NODE_ENV": "production",
        "NODE_NO_WARNINGS": "1",
        "AQE_MEMORY_PATH": "v3/.agentic-qe/memory.db",
        "AQE_LEARNING_ENABLED": "true"
      }
    },
    "agentic-qe": {
      "command": "aqe-mcp",
      "args": [],
      "env": {
        "AQE_PROJECT_ROOT": "/workspaces/agentic-qe-new",
        "AQE_LEARNING_ENABLED": "true",
        "AQE_WORKERS_ENABLED": "true",
        "AQE_CLOUD_SYNC_ENABLED": "true",
        "NODE_ENV": "production"
      }
    },
    "claude-flow": {
      "command": "npx",
      "args": [
        "@claude-flow/cli@latest",
        "mcp",
        "start"
      ],
      "env": {
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "NODE_NO_WARNINGS": "1"
      }
    },
    "vibium": {
      "command": "npx",
      "args": [
        "-y",
        "vibium"
      ],
      "env": {
        "NODE_NO_WARNINGS": "1",
        "VIBIUM_HEADLESS": "true",
        "CHROMEDRIVER_PATH": "/usr/bin/chromedriver",
        "CHROME_PATH": "/usr/bin/chromium"
      }
    }
  }
}
