{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentic-qe.dev/schemas/skill-output-template.json",
  "title": "AQE Skill Output Template Schema",
  "description": "Simplified template schema for skill output validation. Use for self-testing validators.",
  "type": "object",
  "required": ["skillName", "version", "timestamp", "status", "output"],
  "properties": {
    "skillName": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "minLength": 2,
      "maxLength": 64,
      "description": "Name of the skill that produced this output"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$",
      "description": "Semantic version of the skill"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of output generation"
    },
    "status": {
      "type": "string",
      "enum": ["success", "partial", "failed", "skipped"],
      "description": "Overall execution status"
    },
    "trustTier": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "Trust tier (0-3)"
    },
    "output": {
      "type": "object",
      "description": "Skill-specific output data",
      "properties": {
        "summary": {
          "type": "string",
          "description": "Human-readable summary"
        },
        "findings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "title", "severity"],
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "description": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low", "info"]
              },
              "category": { "type": "string" },
              "location": {
                "type": "object",
                "properties": {
                  "file": { "type": "string" },
                  "line": { "type": "integer" }
                }
              },
              "evidence": { "type": "string" }
            }
          },
          "description": "List of findings"
        },
        "recommendations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "title", "priority"],
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "description": { "type": "string" },
              "priority": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "effort": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              },
              "relatedFindings": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "description": "Recommendations"
        },
        "metrics": {
          "type": "object",
          "description": "Quantitative metrics"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "path"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["report", "test", "config", "data", "log"]
              },
              "path": { "type": "string" },
              "format": { "type": "string" },
              "description": { "type": "string" }
            }
          },
          "description": "Generated artifacts"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "executionTimeMs": { "type": "integer", "minimum": 0 },
        "toolsUsed": {
          "type": "array",
          "items": { "type": "string" }
        },
        "agentId": { "type": "string" },
        "modelUsed": { "type": "string" },
        "inputHash": { "type": "string" },
        "parentTaskId": { "type": "string" }
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "schemaValid": { "type": "boolean" },
        "contentValid": { "type": "boolean" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "warnings": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
