{
  "name": "Basic Development DevPod",
  "image": "mcr.microsoft.com/devcontainers/base:debian12",
  "runArgs": [
    "--privileged",
    "--memory=8g",
    "--memory-swap=12g",
    "--memory-reservation=4g",
    "--cpus=3",
    "--oom-kill-disable=false",
    "--memory-swappiness=60"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=2048 --expose-gc",
    "CLAUDE_FLOW_MAX_AGENTS": "10",
    "CLAUDE_FLOW_MEMORY_LIMIT": "512",
    "CLAUDE_FLOW_TOPOLOGY": "sequential",
    "ENABLE_MEMORY_MONITORING": "true",
    "MEMORY_CHECK_INTERVAL": "5000",
    "AGENT_MEMORY_LIMIT_MB": "512",
    "MAX_CONCURRENT_AGENTS": "10",
    "ENABLE_AGENT_QUEUE": "true",
    "MEMORY_PRESSURE_THRESHOLD": "0.85",
    "FORCE_GC_INTERVAL": "60000",
    "AQE_MAX_AGENTS": "10",
    "AQE_MEMORY_LIMIT_MB": "512",
    "AQE_TOPOLOGY": "sequential"
  },
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/python:1": {}
  },
  "hostRequirements": {
    "memory": "8gb",
    "cpus": 2,
    "storage": "64gb"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rooveterinaryinc.roo-cline",
        "vsls-contrib.gistfs",
        "github.copilot",
        "github.copilot-chat",
        "suzuki0430.ccusage-vscode"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/install-tools.sh",
  "forwardPorts": [
    3001,
    3002,
    3003,
    3004,
    3005,
    3006,
    3007,
    3008
  ],
  "portsAttributes": {
    "3001": {
      "label": "Storefront",
      "onAutoForward": "notify"
    },
    "3002": {
      "label": "API Tester",
      "onAutoForward": "notify"
    },
    "3003": {
      "label": "OMNI",
      "onAutoForward": "silent"
    },
    "3004": {
      "label": "IIB ESB",
      "onAutoForward": "silent"
    },
    "3005": {
      "label": "WMS",
      "onAutoForward": "silent"
    },
    "3006": {
      "label": "SAP S/4",
      "onAutoForward": "silent"
    },
    "3007": {
      "label": "Kibana",
      "onAutoForward": "notify"
    },
    "3008": {
      "label": "Message Broker",
      "onAutoForward": "silent"
    }
  },
  "shutdownAction": "none",
  "mounts": [],
  "capAdd": [
    "SYS_ADMIN",
    "SYS_PTRACE"
  ]
}
